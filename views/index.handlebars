<div class="container">

    <div class="row">
  
        <div class="col-md-12"><h1>Burger Bliss</h1></div>
    
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" id="image"><img class="auth-image" src="/assets/images/burger.png" alt="Hamburger" height="190" width="250"></div>
        <div class="col-md-4"></div>
    </div>
    <div class="row background">
        <div class="col-md-4">
            <h3> For You to Enjoy </h3>
            <ol>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <button id="burBut" class="btn-sm" type="submit">Devour it!</button>
                        <input type="hidden" name="devoured" value="true">
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ol>
        </div>
        <div class="col-md-4">
            <form class="create-update-form" action="/" method="POST">
                <h3> Name a Burger </h3>
                <div class="form-group">
                    <input type="text" name="name">
                </div>
                <button type="submit" class=" btn-sm" id="submit">Submit</button>
            </form>

        </div>
        <div class="col-md-4">
            <h3> Nothing But Crumbs Left </h3>
            <ol>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class="btn-sm" id="burBut">Have Another</button>
                        <input type="hidden" name="devoured" value="false">

                    </form>

                </li>
                {{/if}} {{/each}}
            </ol>
        </div>
    </div>
</div>